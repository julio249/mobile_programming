        android:supportsRtl="true"
        android:theme="@style/Theme.Final_project"
        tools:targetApi="31">
        <activity
            android:name=".activities.LineupActivity"
            android:exported="false" />
        <activity
            android:name=".activities.PlayActivity"
            android:exported="true" />
        <activity
            android:name=".adapters.PlaceHolderFeedAdapter"
            android:exported="false" />
        <activity
            android:name=".activities.HomeActivity"
            android:exported="true" /> <!-- Add the FestivalActivity declaration here -->
        <activity
            android:name=".activities.FestivalActivity"
            android:exported="true" />
        <activity android:name=".activities.GalleryPageActivity"
            android:exported="true"/>
